import matplotlib.pyplot as plt
import numpy as np
overs = np.arange(1,11)
scores= [1,6,20,3,5,6,13,5,7,21]
plt.bar(overs, scores, color='pink')
plt.title("india's score over 10 overs (bar chart)")
plt.xlabel("over number")
plt.ylabel("runs scored")
plt.xticks(overs)
plt.grid(axis='y', linestyle='--',alpha=0.7)
plt.show()    
